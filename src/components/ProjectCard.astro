---
interface Props {
  title: string;
  slug: string;
  description: string;
  categories: string[];
  tags?: string[];
  year: number;
  location?: string;
}

const { title, slug, description, categories, tags = [], year, location } = Astro.props;

const primaryCategory = categories[0] || 'bcmi';

const borderColors: Record<string, string> = {
  bcmi: 'var(--accent-bcmi)',
  running: 'var(--accent-running)',
  music: 'var(--accent-music)',
  education: 'var(--accent-education)',
};

const borderColor = borderColors[primaryCategory] || 'var(--accent-primary)';
---

<article
  class="project-card stagger-item"
  data-categories={categories.join(' ')}
  data-tags={tags.join(' ')}
>
  <div class="project-header">
    <div class="project-tags">
      {categories.map((cat) => (
        <span class={`tag tag-${cat}`}>{cat}</span>
      ))}
    </div>
    <div class="project-year">{year}</div>
  </div>

  <h3 class="project-title">{title}</h3>

  <p class="project-description">{description}</p>

  {location && (
    <div class="project-meta">
      <span class="meta-item">{location}</span>
    </div>
  )}

  <a href={`/projects/${slug}`} class="project-link">
    View Project <span class="arrow">&rarr;</span>
  </a>
</article>

<style define:vars={{ borderColor }}>
  .project-card {
    background: linear-gradient(135deg, rgba(27, 36, 68, 0.4), rgba(27, 36, 68, 0.2));
    border: 1px solid var(--border-color);
    border-left: 4px solid var(--borderColor);
    border-radius: 12px;
    padding: var(--space-lg);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .project-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 60px var(--hover-glow);
    border-color: var(--borderColor);
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-sm);
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .project-year {
    color: var(--text-secondary);
    font-size: 0.85rem;
    font-weight: var(--weight-semibold);
  }

  .project-title {
    font-size: 1.35rem;
    margin-bottom: var(--space-xs);
  }

  .project-description {
    color: var(--text-secondary);
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: var(--space-md);
  }

  .project-meta {
    margin-bottom: var(--space-md);
  }

  .meta-item {
    color: var(--text-secondary);
    font-size: 0.85rem;
  }

  .project-link {
    color: var(--accent-primary);
    font-weight: var(--weight-semibold);
    font-size: 0.9rem;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    transition: color 0.3s;
  }

  .project-link:hover {
    color: var(--accent-secondary);
  }

  .project-link:hover .arrow {
    transform: translateX(4px);
  }

  .arrow {
    transition: transform 0.3s;
  }
</style>
