---
interface Props {
  filters: { label: string; value: string }[];
  activeFilter?: string;
}

const { filters, activeFilter = 'all' } = Astro.props;
---

<div class="project-filter" id="projectFilter">
  <div class="container">
    <div class="filter-label">Filter by:</div>
    <div class="filters">
      {filters.map((f) => (
        <button
          class:list={['filter-btn', { active: f.value === activeFilter }]}
          data-filter={f.value}
        >
          {f.label}
        </button>
      ))}
    </div>
  </div>
</div>

<style>
  .project-filter {
    position: sticky;
    top: 80px;
    z-index: 50;
    background: rgba(0, 8, 20, 0.95);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--border-color);
    padding: var(--space-sm) 0;
  }

  .project-filter .container {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }

  .filter-label {
    color: var(--text-secondary);
    font-size: 0.85rem;
    font-weight: var(--weight-semibold);
    white-space: nowrap;
  }

  .filters {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .filter-btn {
    position: relative;
    overflow: hidden;
    background: transparent;
    border: 1px solid var(--border-color);
    color: var(--text-secondary);
    padding: 0.5rem 1.25rem;
    border-radius: 50px;
    font-family: var(--font-body);
    font-size: 0.85rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 1;
  }

  .filter-btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: width 0.6s cubic-bezier(0.4, 0, 0.2, 1), height 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: -1;
  }

  .filter-btn:hover::before,
  .filter-btn.active::before {
    width: 300px;
    height: 300px;
  }

  .filter-btn:hover,
  .filter-btn.active {
    color: white;
    border-color: transparent;
    transform: translateY(-2px);
  }

  @media (max-width: 767px) {
    .project-filter .container {
      flex-direction: column;
      align-items: flex-start;
    }

    .filters {
      width: 100%;
      overflow-x: auto;
      flex-wrap: nowrap;
      padding-bottom: var(--space-xs);
      -webkit-overflow-scrolling: touch;
    }

    .filter-btn {
      white-space: nowrap;
      flex-shrink: 0;
    }
  }
</style>

<script>
  const filterBtns = document.querySelectorAll('.filter-btn');
  const cards = document.querySelectorAll('[data-categories]');

  function applyFilter(filter: string) {
    // Update active state
    filterBtns.forEach(b => {
      b.classList.remove('active');
      if ((b as HTMLElement).dataset.filter === filter) {
        b.classList.add('active');
      }
    });

    // Filter cards with staggered animation
    let visibleIndex = 0;
    cards.forEach((card) => {
      const el = card as HTMLElement;
      const categories = el.dataset.categories?.split(' ') || [];
      const tags = el.dataset.tags?.split(' ') || [];
      const allTerms = [...categories, ...tags];

      if (filter === 'all' || allTerms.includes(filter)) {
        el.style.display = 'block';
        el.style.animation = 'none';
        el.offsetHeight; // trigger reflow
        el.style.animation = `fadeIn 0.6s ease-out ${visibleIndex * 0.1}s both`;
        visibleIndex++;
      } else {
        el.style.display = 'none';
      }
    });
  }

  // Click handlers
  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const filter = (btn as HTMLElement).dataset.filter || 'all';
      applyFilter(filter);
    });
  });

  // Read ?filter= from URL on page load
  const urlParams = new URLSearchParams(window.location.search);
  const initialFilter = urlParams.get('filter');
  if (initialFilter) {
    applyFilter(initialFilter);
  }
</script>
