---
interface Props {
  domain: 'bcmi' | 'running' | 'music' | 'education';
  size?: number;
}

const { domain, size = 48 } = Astro.props;

const colors: Record<string, { primary: string; secondary: string }> = {
  bcmi: { primary: '#00E5FF', secondary: '#0091A3' },
  running: { primary: '#FF6B35', secondary: '#A34422' },
  music: { primary: '#9D4EDD', secondary: '#6A2FA0' },
  education: { primary: '#06FFA5', secondary: '#04A36A' },
};

const c = colors[domain];
---

<div class="domain-icon" data-domain={domain}>
  {domain === 'bcmi' && (
    <!-- Neural network / brain fractal: interconnected nodes with radiating geometry -->
    <svg width={size} height={size} viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <linearGradient id={`grad-${domain}`} x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style={`stop-color:${c.primary}`} />
          <stop offset="100%" style={`stop-color:${c.secondary}`} />
        </linearGradient>
      </defs>
      <!-- Outer hexagonal frame -->
      <polygon points="32,2 58,17 58,47 32,62 6,47 6,17" stroke={c.primary} stroke-width="1" fill="none" opacity="0.3" />
      <!-- Inner hexagon -->
      <polygon points="32,12 48,21 48,43 32,52 16,43 16,21" stroke={c.primary} stroke-width="1" fill="none" opacity="0.5" />
      <!-- Central node -->
      <circle cx="32" cy="32" r="4" fill={`url(#grad-${domain})`} />
      <!-- Satellite nodes -->
      <circle cx="32" cy="14" r="2.5" fill={c.primary} opacity="0.8" />
      <circle cx="47" cy="23" r="2.5" fill={c.primary} opacity="0.7" />
      <circle cx="47" cy="41" r="2.5" fill={c.primary} opacity="0.6" />
      <circle cx="32" cy="50" r="2.5" fill={c.primary} opacity="0.7" />
      <circle cx="17" cy="41" r="2.5" fill={c.primary} opacity="0.8" />
      <circle cx="17" cy="23" r="2.5" fill={c.primary} opacity="0.6" />
      <!-- Connections from center -->
      <line x1="32" y1="28" x2="32" y2="14" stroke={c.primary} stroke-width="0.8" opacity="0.5" />
      <line x1="35" y1="29" x2="47" y2="23" stroke={c.primary} stroke-width="0.8" opacity="0.5" />
      <line x1="35" y1="35" x2="47" y2="41" stroke={c.primary} stroke-width="0.8" opacity="0.5" />
      <line x1="32" y1="36" x2="32" y2="50" stroke={c.primary} stroke-width="0.8" opacity="0.5" />
      <line x1="29" y1="35" x2="17" y2="41" stroke={c.primary} stroke-width="0.8" opacity="0.5" />
      <line x1="29" y1="29" x2="17" y2="23" stroke={c.primary} stroke-width="0.8" opacity="0.5" />
      <!-- Cross connections -->
      <line x1="32" y1="14" x2="47" y2="23" stroke={c.primary} stroke-width="0.5" opacity="0.25" />
      <line x1="47" y1="23" x2="47" y2="41" stroke={c.primary} stroke-width="0.5" opacity="0.25" />
      <line x1="47" y1="41" x2="32" y2="50" stroke={c.primary} stroke-width="0.5" opacity="0.25" />
      <line x1="32" y1="50" x2="17" y2="41" stroke={c.primary} stroke-width="0.5" opacity="0.25" />
      <line x1="17" y1="41" x2="17" y2="23" stroke={c.primary} stroke-width="0.5" opacity="0.25" />
      <line x1="17" y1="23" x2="32" y2="14" stroke={c.primary} stroke-width="0.5" opacity="0.25" />
      <!-- Radiating micro dots -->
      <circle cx="32" cy="6" r="1" fill={c.primary} opacity="0.3" />
      <circle cx="54" cy="19" r="1" fill={c.primary} opacity="0.3" />
      <circle cx="54" cy="45" r="1" fill={c.primary} opacity="0.3" />
      <circle cx="32" cy="58" r="1" fill={c.primary} opacity="0.3" />
      <circle cx="10" cy="45" r="1" fill={c.primary} opacity="0.3" />
      <circle cx="10" cy="19" r="1" fill={c.primary} opacity="0.3" />
    </svg>
  )}

  {domain === 'running' && (
    <!-- Dynamic motion / kinetic fractal: concentric arcs suggesting forward movement -->
    <svg width={size} height={size} viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <linearGradient id={`grad-${domain}`} x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style={`stop-color:${c.primary}`} />
          <stop offset="100%" style={`stop-color:${c.secondary}`} />
        </linearGradient>
      </defs>
      <!-- Outer diamond frame -->
      <polygon points="32,4 60,32 32,60 4,32" stroke={c.primary} stroke-width="1" fill="none" opacity="0.2" />
      <!-- Motion arcs - right side (forward) -->
      <path d="M 36 16 A 20 20 0 0 1 36 48" stroke={c.primary} stroke-width="1.5" fill="none" opacity="0.8" />
      <path d="M 42 20 A 16 16 0 0 1 42 44" stroke={c.primary} stroke-width="1.2" fill="none" opacity="0.6" />
      <path d="M 48 24 A 12 12 0 0 1 48 40" stroke={c.primary} stroke-width="1" fill="none" opacity="0.4" />
      <path d="M 53 28 A 8 8 0 0 1 53 36" stroke={c.primary} stroke-width="0.8" fill="none" opacity="0.25" />
      <!-- Core pulse point -->
      <circle cx="30" cy="32" r="5" fill={`url(#grad-${domain})`} />
      <circle cx="30" cy="32" r="8" stroke={c.primary} stroke-width="0.8" fill="none" opacity="0.3" />
      <!-- Trailing particles -->
      <circle cx="20" cy="26" r="1.5" fill={c.primary} opacity="0.5" />
      <circle cx="16" cy="32" r="1.5" fill={c.primary} opacity="0.35" />
      <circle cx="20" cy="38" r="1.5" fill={c.primary} opacity="0.5" />
      <circle cx="12" cy="28" r="1" fill={c.primary} opacity="0.2" />
      <circle cx="12" cy="36" r="1" fill={c.primary} opacity="0.2" />
      <!-- Speed lines -->
      <line x1="8" y1="24" x2="18" y2="24" stroke={c.primary} stroke-width="0.6" opacity="0.25" />
      <line x1="6" y1="32" x2="14" y2="32" stroke={c.primary} stroke-width="0.6" opacity="0.2" />
      <line x1="8" y1="40" x2="18" y2="40" stroke={c.primary} stroke-width="0.6" opacity="0.25" />
    </svg>
  )}

  {domain === 'music' && (
    <!-- Waveform / sacred geometry: overlapping circles forming a flower of life pattern -->
    <svg width={size} height={size} viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <linearGradient id={`grad-${domain}`} x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style={`stop-color:${c.primary}`} />
          <stop offset="100%" style={`stop-color:${c.secondary}`} />
        </linearGradient>
      </defs>
      <!-- Outer circle -->
      <circle cx="32" cy="32" r="28" stroke={c.primary} stroke-width="0.8" fill="none" opacity="0.2" />
      <!-- Flower of life - 6 overlapping circles -->
      <circle cx="32" cy="22" r="12" stroke={c.primary} stroke-width="0.8" fill="none" opacity="0.35" />
      <circle cx="42" cy="27" r="12" stroke={c.primary} stroke-width="0.8" fill="none" opacity="0.3" />
      <circle cx="42" cy="37" r="12" stroke={c.primary} stroke-width="0.8" fill="none" opacity="0.35" />
      <circle cx="32" cy="42" r="12" stroke={c.primary} stroke-width="0.8" fill="none" opacity="0.3" />
      <circle cx="22" cy="37" r="12" stroke={c.primary} stroke-width="0.8" fill="none" opacity="0.35" />
      <circle cx="22" cy="27" r="12" stroke={c.primary} stroke-width="0.8" fill="none" opacity="0.3" />
      <!-- Center circle -->
      <circle cx="32" cy="32" r="12" stroke={c.primary} stroke-width="1" fill="none" opacity="0.5" />
      <!-- Core -->
      <circle cx="32" cy="32" r="4" fill={`url(#grad-${domain})`} />
      <!-- Resonance dots at intersections -->
      <circle cx="32" cy="20" r="1.5" fill={c.primary} opacity="0.6" />
      <circle cx="42.4" cy="26" r="1.5" fill={c.primary} opacity="0.5" />
      <circle cx="42.4" cy="38" r="1.5" fill={c.primary} opacity="0.6" />
      <circle cx="32" cy="44" r="1.5" fill={c.primary} opacity="0.5" />
      <circle cx="21.6" cy="38" r="1.5" fill={c.primary} opacity="0.6" />
      <circle cx="21.6" cy="26" r="1.5" fill={c.primary} opacity="0.5" />
    </svg>
  )}

  {domain === 'education' && (
    <!-- Growth / branching fractal: tree-like recursive branching pattern -->
    <svg width={size} height={size} viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <linearGradient id={`grad-${domain}`} x1="0%" y1="100%" x2="100%" y2="0%">
          <stop offset="0%" style={`stop-color:${c.secondary}`} />
          <stop offset="100%" style={`stop-color:${c.primary}`} />
        </linearGradient>
      </defs>
      <!-- Outer rounded square -->
      <rect x="6" y="6" width="52" height="52" rx="8" stroke={c.primary} stroke-width="0.8" fill="none" opacity="0.2" />
      <!-- Main trunk -->
      <line x1="32" y1="56" x2="32" y2="36" stroke={c.primary} stroke-width="1.5" opacity="0.7" />
      <!-- Level 1 branches -->
      <line x1="32" y1="36" x2="20" y2="26" stroke={c.primary} stroke-width="1.2" opacity="0.6" />
      <line x1="32" y1="36" x2="44" y2="26" stroke={c.primary} stroke-width="1.2" opacity="0.6" />
      <!-- Level 2 branches - left -->
      <line x1="20" y1="26" x2="13" y2="18" stroke={c.primary} stroke-width="0.9" opacity="0.5" />
      <line x1="20" y1="26" x2="25" y2="17" stroke={c.primary} stroke-width="0.9" opacity="0.5" />
      <!-- Level 2 branches - right -->
      <line x1="44" y1="26" x2="39" y2="17" stroke={c.primary} stroke-width="0.9" opacity="0.5" />
      <line x1="44" y1="26" x2="51" y2="18" stroke={c.primary} stroke-width="0.9" opacity="0.5" />
      <!-- Level 3 leaf nodes -->
      <circle cx="13" cy="16" r="2.5" fill={c.primary} opacity="0.7" />
      <circle cx="25" cy="15" r="2.5" fill={c.primary} opacity="0.6" />
      <circle cx="39" cy="15" r="2.5" fill={c.primary} opacity="0.6" />
      <circle cx="51" cy="16" r="2.5" fill={c.primary} opacity="0.7" />
      <!-- Tiny level 3 sub-branches -->
      <line x1="13" y1="16" x2="9" y2="10" stroke={c.primary} stroke-width="0.5" opacity="0.3" />
      <line x1="13" y1="16" x2="16" y2="10" stroke={c.primary} stroke-width="0.5" opacity="0.3" />
      <line x1="51" y1="16" x2="48" y2="10" stroke={c.primary} stroke-width="0.5" opacity="0.3" />
      <line x1="51" y1="16" x2="55" y2="10" stroke={c.primary} stroke-width="0.5" opacity="0.3" />
      <!-- Micro dots at tips -->
      <circle cx="9" cy="9" r="1" fill={c.primary} opacity="0.4" />
      <circle cx="16" cy="9" r="1" fill={c.primary} opacity="0.4" />
      <circle cx="48" cy="9" r="1" fill={c.primary} opacity="0.4" />
      <circle cx="55" cy="9" r="1" fill={c.primary} opacity="0.4" />
      <!-- Root node -->
      <circle cx="32" cy="36" r="3.5" fill={`url(#grad-${domain})`} />
      <!-- Base glow -->
      <circle cx="32" cy="56" r="2" fill={c.primary} opacity="0.4" />
    </svg>
  )}
</div>

<style>
  .domain-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--space-sm);
  }
</style>
