---
import { getCollection } from 'astro:content';
import { url } from '../utils/paths';

const currentPath = Astro.url.pathname;

// Fetch CMS pages for the About dropdown
const allPages = await getCollection('pages');
const menuPages = allPages
  .filter((p) => p.data.showInMenu !== false)
  .sort((a, b) => (a.data.menuOrder ?? 99) - (b.data.menuOrder ?? 99));

const navLinks = [
  { href: url('/work'), label: 'Work' },
  { href: url('/blog'), label: 'Blog' },
  { href: url('/contact'), label: 'Contact' },
];

const hasDropdown = menuPages.length > 0;
---

<header class="site-header">
  <div class="container header-inner">
    <a href={url('/')} class="logo gradient-text">Joel Eaton</a>
    <nav class="main-nav" aria-label="Main navigation">
      <ul class="nav-list">
        <li>
          <a
            href={url('/')}
            class:list={[{ active: currentPath === url('/') }]}
          >
            Home
          </a>
        </li>
        <li class:list={['nav-item-about', { 'has-dropdown': hasDropdown }]}>
          <a
            href={url('/about')}
            class:list={['about-link', { active: currentPath.startsWith(url('/about')) }]}
          >
            About
          </a>
          {hasDropdown && (
            <button class="dropdown-arrow" aria-label="Toggle About submenu" aria-expanded="false">▾</button>
          )}
          {hasDropdown && (
            <ul class="dropdown" role="menu">
              <li role="menuitem">
                <a href={url('/about')}>About Me</a>
              </li>
              {menuPages.map((page) => (
                <li role="menuitem">
                  <a href={url(`/about/${page.data.slug}`)}>{page.data.title}</a>
                </li>
              ))}
            </ul>
          )}
        </li>
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class:list={[{ active: currentPath.startsWith(link.href) }]}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
    <button class="menu-toggle" aria-label="Toggle menu" aria-expanded="false">
      <span class="menu-icon">&#9776;</span>
    </button>
  </div>
</header>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(0, 8, 20, 0.9);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--border-color);
    animation: slideDown 0.6s ease-out;
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 80px;
  }

  .logo {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: var(--weight-black);
    text-decoration: none;
  }

  .nav-list {
    display: flex;
    gap: var(--space-lg);
    list-style: none;
  }

  .main-nav a {
    position: relative;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 500;
    transition: color 0.3s;
  }

  .main-nav a::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
    transition: width 0.3s;
  }

  .main-nav a:hover,
  .main-nav a.active {
    color: var(--text-primary);
  }

  .main-nav a:hover::after,
  .main-nav a.active::after {
    width: 100%;
  }

  /* About item with dropdown */
  .nav-item-about {
    position: relative;
    display: flex;
    align-items: center;
    gap: 0.15rem;
  }

  .dropdown-arrow {
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    font-size: 0.7em;
    opacity: 0.6;
    transition: transform 0.2s;
    color: var(--text-secondary);
    line-height: 1;
    display: none; /* hidden on desktop — dropdown uses hover */
  }

  /* Dropdown panel */
  .dropdown {
    display: none;
    position: absolute;
    top: calc(100% + 14px);
    left: 50%;
    transform: translateX(-50%);
    min-width: 180px;
    background: rgba(0, 8, 20, 0.98);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid var(--border-color);
    border-radius: 10px;
    padding: 0.5rem 0;
    flex-direction: column;
    gap: 0;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
    list-style: none;
  }

  /* Desktop: show dropdown on hover over the whole <li> */
  .has-dropdown:hover > .dropdown {
    display: flex;
  }

  /* Invisible bridge so mouse can travel from link to dropdown */
  .dropdown::before {
    content: '';
    position: absolute;
    top: -16px;
    left: 0;
    right: 0;
    height: 16px;
  }

  .dropdown li {
    border-bottom: none;
  }

  .dropdown a {
    display: block;
    padding: 0.6rem 1.25rem;
    font-size: 0.9rem;
    white-space: nowrap;
    color: var(--text-secondary);
    transition: all 0.2s;
  }

  .dropdown a::after {
    display: none;
  }

  .dropdown a:hover {
    color: var(--text-primary);
    background: rgba(255, 51, 102, 0.08);
  }

  /* Hamburger button */
  .menu-toggle {
    display: none;
    background: none;
    border: none;
    color: var(--text-primary);
    font-size: 1.5rem;
    cursor: pointer;
    padding: var(--space-xs);
  }

  /* ---- Mobile ---- */
  @media (max-width: 767px) {
    .menu-toggle {
      display: block;
    }

    .main-nav {
      display: none;
      position: absolute;
      top: 80px;
      left: 0;
      right: 0;
      background: rgba(0, 8, 20, 0.98);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid var(--border-color);
      padding: var(--space-md);
    }

    .main-nav.active {
      display: block;
    }

    .nav-list {
      flex-direction: column;
      gap: 0;
    }

    .nav-list > li {
      border-bottom: 1px solid var(--border-color);
    }

    .main-nav a {
      display: block;
      padding: var(--space-sm) 0;
    }

    .main-nav a::after {
      display: none;
    }

    /* About row: link + arrow side by side */
    .nav-item-about {
      flex-wrap: wrap;
    }

    .nav-item-about > .about-link {
      flex: 1;
    }

    .dropdown-arrow {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 44px;
      height: 44px;
      font-size: 0.85em;
      opacity: 0.7;
    }

    .dropdown-arrow.rotated {
      transform: rotate(180deg);
    }

    /* Disable desktop hover */
    .has-dropdown:hover > .dropdown {
      display: none;
    }

    /* Mobile dropdown: hidden by default, toggled via JS */
    .dropdown {
      display: none;
      position: static;
      transform: none;
      min-width: 0;
      width: 100%;
      background: transparent;
      backdrop-filter: none;
      border: none;
      border-radius: 0;
      padding: 0;
      box-shadow: none;
    }

    .dropdown.open {
      display: flex;
    }

    .dropdown::before {
      display: none;
    }

    .dropdown li {
      border-bottom: 1px solid var(--border-color);
    }

    .dropdown a {
      padding: var(--space-sm) 0 var(--space-sm) var(--space-md);
      font-size: 0.9rem;
    }

    .dropdown a:hover {
      background: transparent;
    }
  }
</style>

<script>
  // Mobile hamburger toggle
  const menuToggle = document.querySelector('.menu-toggle');
  const mainNav = document.querySelector('.main-nav');
  const menuIcon = document.querySelector('.menu-icon');

  if (menuToggle && mainNav && menuIcon) {
    menuToggle.addEventListener('click', () => {
      mainNav.classList.toggle('active');
      const isExpanded = mainNav.classList.contains('active');
      menuToggle.setAttribute('aria-expanded', String(isExpanded));
      menuIcon.innerHTML = isExpanded ? '&#10005;' : '&#9776;';
    });
  }

  // Mobile: toggle About sub-menu via arrow button
  const arrowBtn = document.querySelector('.dropdown-arrow') as HTMLButtonElement | null;
  const dropdown = document.querySelector('.dropdown');

  if (arrowBtn && dropdown) {
    arrowBtn.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      dropdown.classList.toggle('open');
      arrowBtn.classList.toggle('rotated');
      arrowBtn.setAttribute('aria-expanded', String(dropdown.classList.contains('open')));
    });
  }
</script>
